<UserControl x:Class="DidisYT_Manager.Controls.UploadPlanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DidisYT_Manager.Controls"
             mc:Ignorable="d"
             Width="180"
             d:DesignHeight="300" 
             d:DesignWidth="300">
    <DockPanel>
        <Button BorderThickness="1 1 1 0"
                BorderBrush="#b2b2b2"
                Background="#333333"
                Foreground="White"
                Content="Upload-Plan"
                Height="25"
                DockPanel.Dock="Top"/>

        <Border BorderThickness="1"
                BorderBrush="#b2b2b2">
            
            <ListBox Background="Transparent"
                     BorderThickness="0"/>
        </Border>

    </DockPanel>
</UserControl>
